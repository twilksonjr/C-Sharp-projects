@model ChefDishBundle
<!-- Insert Model Here -->
<div class="row justify-content-center">
    <div class="col-lg-10 rounded justify-content-center m-4 bg-white">
        <div class="row justify-content-center m-3 border-bottom">
            <h1>Add a Dish!</h1>
            <a href="/">Home</a>
        </div>
        <form asp-action="createDish" asp-controller="Home" method="POST">
            <div class="form-row justify-content-center m-3 border-bottom">
                <div class="col-lg-3 mt-3 mb-3 text-center">
                    <label asp-for="dish.ChefId"><h3>Chef's Name</h3></label>
                        <select asp-for="dish.ChefId">
                            @foreach(var chef in Model.AllChefs)
                            {
                                <option value="@chef.ChefId">@chef.FirstName @chef.LastName</option>
                            }
                        </select>
                    <label asp-for="dish.Name" class="mt-3"></label><h3>Name of Dish</h3></label>
                    <input type="text" asp-for="dish.Name">
                    <p><span asp-validation-for="dish.Name" class="text-danger"></span></p>
                    <label asp-for="dish.Calories" class="mt-3"><h3>Calories</h3></label>
                    <input type="text" asp-for="dish.Calories" class="w-100">
                    <p><span asp-validation-for="dish.Calories" class="text-danger"></span></p>
                </div>
                <div class="col-lg-3 mt-3 mb-3">
                    <div class="form-row justify-content-center">
                        <label asp-for="dish.Tastiness"><h3>Tastiness</h3></label>
                    </div>
                    <div class="form-row justify-content-center">
                        <select asp-for="dish.Tastiness">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                        </select>
                        <p><span asp-validation-for="dish.Tastiness" class="text-danger"></span></p>
                    </div>
                </div>
                <div class="col-lg-4 mt-3 mb-3 text-center">
                    <div class="form-row justify-content-Start">
                        <label asp-for="dish.Description"><h3>Description</h3></label>
                    </div>
                    <div class="form-row justify-content-Start">
                        <textarea class="w-100" asp-for="dish.Description" rows="7"></textarea>
                        <p><span asp-validation-for="dish.Description" class="text-danger"></span></p>
                    </div>
                    <div class="form-row justify-content-center mt-3">
                        <input type="submit" class="btn btn-success mt-2"value= "Add Dish">
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>